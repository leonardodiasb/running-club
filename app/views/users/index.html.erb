<% if current_user %>
  <%= link_to 'tracks', user_tracks_path(@user.id) %>
<% else %>
  <div class="flex flex-col items-center justify-between bg-zinc-100 absolute w-full h-full">
    <div class="relative top-1/3">
      <h1 class="text-red-500 text-5xl font-bold">RunningClub</h1>
    </div>
    <div class="w-full flex items-center">
      <%= link_to 'LOG IN', new_user_session_path, class: 'block text-center text-white bg-gray-800 p-4 duration-300 hover:bg-black active:bg-black focus:bg-black w-full', style: '' %>
