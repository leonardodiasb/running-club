<div class="p-8">
  <h1 class="font-medium text-2xl mt-12 text-center">Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mt-6') do |f| %>
    <div class="field my-5 text-sm">
      <%= f.label :email, class: 'block text-black' %><br />
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'border-0 px-4 py-3 font-light focus:outline-none bg-gray-100 w-full' %>
    </div>

    <div class="field my-5 text-sm">
      <%= f.label :password, class: 'block text-black' %><br />
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", class: 'border-0 px-4 py-3 font-light focus:outline-none bg-gray-100 w-full' %>
      <div class="flex justify-between mt-2">
        <div class="text-xs text-gray-600">
        <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end %>
        </div>
        <div class="field flex justify-end text-xs text-gray-600">
          <%= link_to "Forgot password?", new_password_path(resource_name) %>
        </div>
      </div>
    </div>

    <%= f.submit "Login", class: 'actions block text-center text-white bg-gray-800 p-3 duration-300 rounded-sm hover:bg-black active:bg-black focus:bg-black w-full'%>
  <% end %>
</div>